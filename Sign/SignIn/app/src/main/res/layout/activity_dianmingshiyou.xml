<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wangli.signin.DianmingshiyouActivity"
    android:background="@drawable/kechengguanlibackground">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="&lt;  "
        android:id="@+id/button_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:textSize="25dp"
        android:gravity="top|left"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/textView_shiyou"
        android:textColor="#000000"
        android:text="会"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态：已结束"
        android:id="@+id/textView_zhuangtai"
        android:layout_below="@+id/textView_shiyou"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人数：0"
        android:id="@+id/textView_renshu"
        android:layout_below="@+id/textView_zhuangtai"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="签到清单"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView_renshu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center"
        android:textColor="#000000" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"

        android:text="随机点名"
        android:id="@+id/button_suijidianming"
        android:onClick="Suijidianming"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textColor="#ffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_qiandao"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3"
        android:layout_above="@+id/button_suijidianming" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"

        android:text="查看离场"
        android:id="@+id/button_leave"
        android:layout_below="@+id/listView_qiandao"
        android:layout_alignRight="@+id/listView_qiandao"
        android:layout_alignEnd="@+id/listView_qiandao"
        android:onClick="chaKanlichang"

        android:textColor="#ffffff" />

</RelativeLayout>
