<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wangli.signin.InformationActivity"
    android:background="@drawable/kechengguanlibackground">

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="输入个人信息"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="学号:"
        android:id="@+id/textView9"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_above="@+id/textView10"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="姓名:"
        android:id="@+id/textView10"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText_xuehao"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/button_submit"
        android:layout_alignEnd="@+id/button_submit" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText_xingming"
        android:layout_below="@+id/editText_xuehao"
        android:layout_alignLeft="@+id/editText_xuehao"
        android:layout_alignStart="@+id/editText_xuehao" />

    <Button
        android:background="@drawable/button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="提交"
        android:id="@+id/button_submit"
        android:layout_below="@+id/editText_xingming"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:onClick="Submit"

        android:textColor="#ffffff" />
    <Button
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="&lt;  "
    android:id="@+id/button_back"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#00000000"
    android:textSize="25dp"
    android:gravity="top|left"
    android:textColor="#000000"
    />


</RelativeLayout>
