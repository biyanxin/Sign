<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wangli.signin.Main2Activity"
    android:background="@drawable/main2background">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="课程管理"
        android:id="@+id/button_kechengguanli"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/button"
        android:layout_above="@+id/button_woyaoqiandao"
        android:layout_alignLeft="@+id/button_woyaoqiandao"
        android:layout_alignStart="@+id/button_woyaoqiandao"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="我要签到"
        android:id="@+id/button_woyaoqiandao"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:onClick="Woyaoqiandao1"
        android:gravity="center"
        android:allowUndo="true"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/button_qitacaozuo"
        android:layout_alignLeft="@+id/button_qitacaozuo"
        android:layout_alignStart="@+id/button_qitacaozuo" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="其他操作"
        android:id="@+id/button_qitacaozuo"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:onClick="qiTacaozuo"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="&lt;  "
        android:id="@+id/button_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:textSize="25dp"
        android:gravity="top|left"
        android:textColor="#000000"
        />

</RelativeLayout>
