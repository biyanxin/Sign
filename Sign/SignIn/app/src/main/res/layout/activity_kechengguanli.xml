<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wangli.signin.KechengguanliActivity"
    android:background="@drawable/kechengguanlibackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="&lt;  "
        android:id="@+id/button_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:textSize="25dp"
        android:gravity="top|left"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="课堂管理"
        android:id="@+id/textView_faqidianming"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_alignTop="@+id/button_back"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="课程列表"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView_faqidianming"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:textColor="#000000" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="添加课程"
        android:id="@+id/button_tianjiakecheng"
        android:textColor="#ffffff"
        android:onClick="Tianjiakecheng"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_kechengliebiao"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_tianjiakecheng"
        android:layout_below="@+id/textView4" />


</RelativeLayout>
