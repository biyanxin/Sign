<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wangli.signin.MainActivity"
    android:background="@drawable/denglubackground">


    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:background="@drawable/edit_topleft"
        android:drawableRight="@drawable/denglu_mobile"
        android:gravity="center"
        android:textSize="20dp"
        android:drawablePadding="8dp"
        android:layout_alignTop="@+id/editText_name"
        android:layout_alignLeft="@+id/button_denglu"
        android:layout_alignStart="@+id/button_denglu" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_bottomleft"
        android:drawableRight="@drawable/denglu_lock"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="20dp"
        android:drawablePadding="50dp"
        android:duplicateParentState="false"

        android:editable="false"
        android:layout_alignTop="@+id/editText_pwd"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/editText_name"
        android:hint="手机号"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_topright"
        android:drawablePadding="8dp"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/editText_pwd"
        android:layout_alignStart="@+id/editText_pwd" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/editText_pwd"
        android:password="true"
        android:background="@drawable/edit_bottomright"
        android:hint="密码"
        android:paddingLeft="10dp"
        android:layout_above="@+id/button_denglu"
        android:layout_alignRight="@+id/button_denglu"
        android:layout_alignEnd="@+id/button_denglu"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="登录"
        android:onClick="denglu"
        android:id="@+id/button_denglu"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/button_zhuce"
        android:layout_alignLeft="@+id/button_zhuce"
        android:layout_alignStart="@+id/button_zhuce" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="立即注册"

        android:id="@+id/button_zhuce"
        android:textColor="#b77b0c"
        android:autoText="true"
        android:background="#00000000"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>